<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="title icon" href="images/title-img.png">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <script defer src="https://use.fontawesome.com/releases/v5.0.13/js/all.js" integrity="sha384-xymdQtn1n3lH2wcu0qhcdaOpQwyoarkgLVxC/wZ5q7h9gHtxICrpcaSUfygqZGOe" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
    <link rel="stylesheet" href="/dashboard.css">
    <title>Admin Dashboard</title>
  </head>
  <body>
    
    <!-- navbar -->
    <nav class="navbar navbar-expand-md navbar-light mb-0">
      <div class="navbar-toggler mr-auto mb-2 text-white" >
        <a class="text-white" href="/invest"></a><i class="fab fa-bitcoin fa-2x mx-3 text-white"></i>Coin Analytica</a>
      </div>
      <button class="navbar-toggler ml-auto mb-2 bg-light" type="button" data-toggle="collapse" data-target="#myNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
     
      <div class="collapse navbar-collapse" id="myNavbar">
        <div class="container-fluid">
          <div class="row">
            <!-- sidebar -->
            <div class="col-xl-2 col-lg-3 col-md-4 sidebar fixed-top">
              <a href="#" class="navbar-brand text-white d-block mx-auto text-center py-3 mb-4 bottom-border">
               <div class="aa"> <i class="fab fa-bitcoin fa-2x "></i>Coin Analytica</a> </div>
              </a>
              <div class="bottom-border pb-3">
                <img src="/profile.png" width="50" class="rounded-circle mr-3">
                <h4><a href="#" class="text-white"><%= user.fisrt_name.toUpperCase() + " " + user.last_name.toUpperCase() %> </a></h4>
              </div>
              <ul class="navbar-nav flex-column mt-4">
                <li class="nav-item"><a href="/dashboard" class="nav-link text-white p-3 mb-2 "><i class="fas fa-home text-light fa-lg mr-3"></i>Dashboard</a></li>
                <li class="nav-item"><a href="/invest" class="nav-link text-white p-3 mb-2 sidebar-link current"><i class="fas fa-piggy-bank text-light fa-lg mr-3"></i>Invest</a></li>
                <li class="nav-item"><a href="/withdrawal" class="nav-link text-white p-3 mb-2 sidebar-link"><i class="fas fa-money-bill-alt text-light fa-lg mr-3"></i>withdraw</a></li>
                <li class="nav-item"><a href="/profile" class="nav-link text-white p-3 mb-2 sidebar-link"><i class="fas fa-user text-light fa-lg mr-3"></i>Profile</a></li>
                <li class="nav-item"><a href="/settings" class="nav-link text-white p-3 mb-2 sidebar-link"><i class="fas fa-wrench text-light fa-lg mr-3"></i>Settings</a></li>
              </ul>
            </div>
            <!-- end of sidebar -->

            <!-- top-nav -->
            <div class="col-xl-10 col-lg-9 col-md-8 ml-auto fn fixed-top py-2 top-navbar">
              <div class="row align-items-center">
                <div class="col-md-4">
                  <h4 class="text-light text-uppercase mb-0">Checkout</h4>
                </div>
                <div class="col-md-5">
                  <form>
                  </form>
                </div>
                <div class="col-md-3">
                  <ul class="navbar-nav">
                    <li class="nav-item icon-parent"><a href="#" class="nav-link icon-bullet"><i class="fas fa-bell text-muted fa-lg"></i></a></li>
                    <li class="nav-item ml-md-auto"><a href="/users/notification" class="nav-link" data-toggle="modal" data-target="#sign-out"><i class="fas fa-sign-out-alt text-danger fa-lg"></i></a></li>
                  </ul>
                </div>
              </div>
            </div>
            <!-- end of top-nav -->
          </div>
        </div>
      </div>
    </nav>
    <!-- end of navbar -->

    <!-- modal -->
    <div class="modal fade" id="sign-out">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title">Want to leave?</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
          </div>
          <div class="modal-body">
            Press logout to leave
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-success" data-dismiss="modal">Stay Here</button>
            <a href="/users/logout" class="btn btn-danger">Logout</a>
          </div>
        </div>
      </div>
    </div>
    <!-- end of modal -->

    <!-- cards -->

    <!-- end of cards -->
    
    <!-- activities / quick post -->
    <section>
        <div class="container-fluid">
          <div class="row">
            <div class="col-xl-10 col-lg-11 col-md-12 ml-auto ">
              <div class="row align-items-center mb-5">
                <div class="col-xl-10 mt-5">
                  <div class="card rounded">
                    <div class="card-body">
                      <h5 class="text-primary text-info font-weight-bold mb-4">Complete transaction</h5>
                      <ul class="list-inline text-center py-3">
                        <li class="list-inline-item mr-4">
                          <a href="#">
                            <i class="fas fa-pencil-alt text-success"></i>
                            <span class="h6 text-muted">Status: </span><span class="h6 text-danger"> pending</span>
                          </a>
                        </li>
                        
                        <li class="list-inline-item">
                          <a href="#">
                            <i class="fas fa-map-marker-alt text-primary"></i>
                            <span class="h6 text-info">Level: </span><span class="h6 text-primary"> Checkout</span>
                          </a>
                        </li>
                      </ul>
                      <form>
                        <div class="form-group">
                            <p class="font-weight-bold text-danger" id="counter">Expires in 721 Secs</p>
                          <button type="button" class="btn btn-md text-uppercase font-weight-bold text-light bg-info py-2 mb-5" id="refresh">refresh time</button>
                        </div>
                      </form>
                     
                        <div class="col-12">
                          <div >
                            <img src="/qr.png" alt="" class="d-block mb-4" >
                            <p class="font-weight-bold d-block" id="address">1EHYaMqu2EtBNQREWpfEPv4uBM8bCyzgFk</p>
                            <p class="font-weight-bold text-danger">Transmit Payment to the above Address to complete  transaction.</p>
                            <span><button type="button" class="btn text-uppercase font-weight-bold text-light bg-info py-2 mb-5" id="copy">copy Address</button></span>
                        </div>
                      </div>
                    </div>
                    <a href="/bloop" class=" col-7 btn text-center text-uppercase font-weight-bold text-light bg-info py-2  mx-auto mb-4">Confirm payment</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      <!-- end of activities / quick post -->
  
    
    <script src="dashboard.js"></script>
  </body>
</html>






